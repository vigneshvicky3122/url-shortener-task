<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
</head>

<body>
    <div class="container">
        <div class="row">
            <h1 class="col-lg-12 text-center">
                URL Shortener
            </h1>
        </div>
        <form action="/create" method="POST">
            <div class="row">
                <div class="input-group mb-3">
                    <input type="text" name="longUrl" class="form-control" id="exampleInputPassword1"
                        placeholder="Paste your Long Url">
                    <div class="input-group-append">
                        <input type="submit" class="btn btn-outline-secondary" value="submit" />
                    </div>
                </div>
            </div>
        </form>
        <div class="row">
            <%for (let index=0; index < urlResult.length; index++) { %>
                <div class="card text-bg-light mb-3" style="max-width: 18rem;">
                    <div class="card-header">Total Click : <%= urlResult[index].clickCount %>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title"><a href="http://localhost:8000/<%=
                            urlResult[index].shortUrl %>" class="card-title" target="_blank">http://localhost:8000/<%=
                                    urlResult[index].shortUrl %></a></h5>
                        <p class="card-text">
                            <%= urlResult[index].longUrl %>
                        </p>
                        <a href="/delete/<%= urlResult[index]._id %>" class="btn btn-sm btn-danger">Remove</a>
                    </div>
                </div>
                <% } %>
        </div>
    </div>
</body>

</html>